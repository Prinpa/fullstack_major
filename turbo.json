{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "JWT_SECRET",
        "SKIP_ENV_VALIDATION",
        "NODE_ENV"
      ],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [".env"],
  "globalEnv": [
    "JWT_SECRET",
    "SKIP_ENV_VALIDATION",
    "NODE_ENV"
  ]
}
