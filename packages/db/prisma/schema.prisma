generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db" 
}

model products {
  id     Int      @id @default(autoincrement())
  title  String
  content String
  description String
  imageUrl  String
  listedDate  DateTime @default(now())
  soldDate  DateTime?
  price  Float
  quantity  Int
  category  String
  sold  Boolean  @default(false)
  active  Boolean  @default(true)
}

// user model contain id, first name, last name, email, password
model user {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role     String   @default("user")
}

